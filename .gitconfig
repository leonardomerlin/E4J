[core]
    # editor = gvim.exe
    autocrlf = true
    excludesfile = ~/.gitignore
[alias]
    st = status
    # ci = commit
    # co = checkout
    # br = branch
    df = difftool
    
    undo = reset --soft HEAD^
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    last = log -1 HEAD
    tree = log --graph --oneline --decorate=full --color=always --branches
    dump = cat-file -p
[gerrit]
    createchangeid = true
